# Database - Use Azure PostgreSQL/CosmosDB
POSTGRES_URL=postgresql://username:password@your-azure-postgres.postgres.database.azure.com:5432/stilya
REDIS_URL=redis://your-azure-redis.redis.cache.windows.net:6380/0?ssl=true

# Azure Key Vault for secure credential management
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# AI Models - Use Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2023-12-01-preview
LLM_MODEL=gpt-4
CLIP_MODEL=openai/clip-vit-base-patch32

# Azure Storage for fashion dataset and images
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONTAINER_NAME=fashion-data
AZURE_STORAGE_CONNECTION_STRING=your-connection-string

# Azure Service Bus for message queuing
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Logging and Monitoring
LOG_LEVEL=INFO
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection

# Development Environment
ENVIRONMENT=development
DEBUG=false