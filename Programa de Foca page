<script>
    function calculate1RM() {
        const weight = parseFloat(document.getElementById('weight-lifted').value);
        const reps = parseInt(document.getElementById('reps-done').value);
        const resultElement = document.getElementById('rm-result');

        if (isNaN(weight) || isNaN(reps) || weight <= 0 || reps <= 0) {
            resultElement.innerText = "Por favor, insira valores válidos.";
            return;
        }
        if (reps === 1) {
            resultElement.innerText = `Seu 1RM é ${weight.toFixed(2)} kg.`;
            return;
        }

        const estimated1RM = weight * (1 + (reps / 30));
        resultElement.innerText = `Seu 1RM estimado é: ${estimated1RM.toFixed(2)} kg`;
    }

    function generatePercentages() {
        const oneRepMax = parseFloat(document.getElementById('one-rep-max').value);
        const table = document.getElementById('percentage-table');
        const tbody = table.querySelector('tbody');

        if (isNaN(oneRepMax) || oneRepMax <= 0) {
            alert("Por favor, insira um 1RM válido.");
            return;
        }

        tbody.innerHTML = ''; // Limpa a tabela
        const percentages = [
            { p: 90, focus: 'Força Máxima' },
            { p: 80, focus: 'Força/Hipertrofia' },
            { p: 70, focus: 'Hipertrofia/Resistência' },
            { p: 60, focus: 'Velocidade/Técnica' },
            { p: 50, focus: 'Esforço Dinâmico/Aquecimento' }
        ];

        percentages.forEach(item => {
            const load = (oneRepMax * (item.p / 100)).toFixed(2);
            const row = `<tr>
                <td>${item.p}%</td>
                <td>${load} kg</td>
                <td>${item.focus}</td>
            </tr>`;
            tbody.innerHTML += row;
        });

        table.style.display = 'table';
    }

    function calculateRelativeStrength() {
        const oneRepMax = parseFloat(document.getElementById('relative-1rm').value);
        const bodyWeight = parseFloat(document.getElementById('body-weight').value);
        const resultElement = document.getElementById('relative-result');

        if (isNaN(oneRepMax) || isNaN(bodyWeight) || oneRepMax <= 0 || bodyWeight <= 0) {
            resultElement.innerText = "Por favor, insira valores válidos.";
            return;
        }

        const ratio = oneRepMax / bodyWeight;
        let classification = "Iniciante";
        if (ratio >= 1.5 && ratio < 2.0) classification = "Intermediário";
        if (ratio >= 2.0 && ratio < 2.5) classification = "Avançado";
        if (ratio >= 2.5) classification = "Elite";

        resultElement.innerHTML = `Sua força relativa é <strong>${ratio.toFixed(2)}x</strong> seu peso corporal.<br>Classificação (estimada): <strong>${classification}</strong>`;
    }
</script>

